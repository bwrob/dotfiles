{
    "[haskell]": {
        "editor.defaultFormatter": "vigoo.stylish-haskell"
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorWidth": 3,
    "editor.fontLigatures": true,
    "editor.minimap.renderCharacters": false,
    "editor.mouseWheelZoom": true,
    "editor.stickyScroll.enabled": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "haskell.manageHLS": "GHCup",
    "stylishHaskell.commandLine": "/Users/bwrob/.cabal/bin/stylish-haskell",
    "stylishHaskell.runOnSave": true,
    "stylishHaskell.showConsoleOnError": true,
    "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.mouseWheelZoom": true,
    "window.zoomLevel": 0.3,
    "workbench.colorTheme": "Lambda Dark+",
    "workbench.iconTheme": "file-icons-colourless",
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "zenMode.fullScreen": false
}
